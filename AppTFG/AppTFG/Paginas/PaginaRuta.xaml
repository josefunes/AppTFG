<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTFG.Paginas.PaginaRuta">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <StackLayout Padding="15">
                <Label Text="Nombre: " TextColor="Gray" FontSize="Medium"/>
                <Entry x:Name="txtNombre" TextColor="DarkGray" Text="{Binding Nombre}" 
                       Placeholder="Ingresa el nombre de la ruta" 
                       PlaceholderColor="LightGray" BackgroundColor="White" FontSize="Medium"/>
                <Button x:Name="btnImagen" Text="Abrir galería" 
                            BackgroundColor="White" Margin="10" 
                            TextColor="Gray" WidthRequest="150"  
                            HorizontalOptions="Center" Clicked="BtnImagen_Clicked"/>
                <Image x:Name="imgRuta" Source="{Binding ImagenPrincipal}" 
                           VerticalOptions="StartAndExpand" HorizontalOptions="Center" 
                           Aspect="AspectFill" HeightRequest="-1" 
                           WidthRequest="-1" />
            </StackLayout>

            <ActivityIndicator x:Name="indicator" Color="#263238" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="0"/>
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnRegistrar" Text="Guardar" Order="Primary" Priority="0" Clicked="BtnRegistrar_Clicked"/>
        <ToolbarItem x:Name="btnEliminar" Text="Eliminar" Order="Primary" Priority="1" Clicked="BtnEliminar_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>