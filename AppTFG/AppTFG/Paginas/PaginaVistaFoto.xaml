<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTFG.Paginas.PaginaVistaFoto">
    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never">
            <StackLayout BackgroundColor="White">
                <StackLayout Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="300"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Image x:Name="imgFoto" Source="{Binding Imagen}"
                            Aspect="AspectFill"  HorizontalOptions="Fill" 
                            VerticalOptions="Fill" Grid.Row="0"/>
                        <Label x:Name="txtNombre" TextColor="Black" Text="{Binding Nombre}" 
                           FontFamily="BSDRegular"  Grid.Row="1" BackgroundColor="White" FontSize="Large"/>
                    </Grid>
                </StackLayout>
                <ActivityIndicator x:Name="indicator" Color="#263238" VerticalOptions="Center" HorizontalOptions="Center"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>