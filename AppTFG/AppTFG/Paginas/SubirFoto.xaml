<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AppTFG.Paginas.SubirFoto">
    
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
            <Button x:Name="BrowseButton"  
                        BackgroundColor="Gray" 
                        TextColor="White" 
                        Text="Abrir Galería" 
                        HorizontalOptions="CenterAndExpand"
                        Clicked="BtnAbrirGaleria_Clicked"/>
            <Image x:Name="image" HeightRequest="150" WidthRequest="200"/>
            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" Margin="0,10">
                <Entry x:Name="TittleEntry" Placeholder="Title" WidthRequest="300"/>
            </StackLayout>
            <Button x:Name="UploadButton" Margin="0,20" BackgroundColor="Gray" TextColor="White"
                        Text="Subir foto" HorizontalOptions="CenterAndExpand" Clicked="BtnSubirFoto_Clicked"/>
            <ActivityIndicator x:Name="indicator" Color="#263238" VerticalOptions="Center" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>