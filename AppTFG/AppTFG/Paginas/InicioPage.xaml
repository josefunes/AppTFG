<ContentPage
    x:Class="AppTFG.Paginas.InicioPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Padding="0,0,0,0"
    BackgroundColor="#791AE5">
    <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <StackLayout>
            <Grid Margin="0,0,0,0">
                <StackLayout Margin="20,0,20,0" Spacing="20">
                    <Label FontAttributes="Bold" FontSize="28" HorizontalOptions="StartAndExpand"
                        Text="Start Your Workday Comfortably" TextColor="White" VerticalOptions="StartAndExpand"
                        WidthRequest="200" />
                </StackLayout>
                <pv:PancakeView Padding="10" BackgroundColor="White" Margin="0,0,30,0"
                            BorderThickness="1" CornerRadius="15" Elevation="3" HorizontalOptions="EndAndExpand" WidthRequest="120">
                    <StackLayout>
                        <ImageButton Source="bgImage1" Clicked="PuebloClick" BackgroundColor="Transparent"/>
                        <Label FontAttributes="Bold" FontSize="20" HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center" Text="Mi pueblo" TextColor="#791AE5"
                                    VerticalOptions="CenterAndExpand">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="PuebloClick"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </pv:PancakeView>
            </Grid>
            <pv:PancakeView Margin="0,0,0,0" Padding="30,0,30,30" BackgroundColor="White" CornerRadius="40,40,0,0"
                VerticalOptions="FillAndExpand">
                <StackLayout>
                    <Label Margin="20" FontAttributes="Bold" FontSize="20" HorizontalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Center" Text="¿Qué quieres hacer ahora?" TextColor="Black"
                        VerticalOptions="Center" />
                    <Grid Margin="5" ColumnSpacing="20" RowSpacing="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="170" />
                            <RowDefinition Height="170" />
                            <RowDefinition Height="170" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <pv:PancakeView Grid.Row="0" Grid.Column="0" Padding="10" BackgroundColor="#791AE5"
                            BorderThickness="1" CornerRadius="15" Elevation="3">
                            <StackLayout>
                                <ImageButton Source="bgImage1" VerticalOptions="CenterAndExpand" Clicked="RutaClick" BackgroundColor="Transparent"/>
                                <Label FontAttributes="Bold" FontSize="20" HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center" Text="Rutas" TextColor="White"
                                    VerticalOptions="CenterAndExpand">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="RutaClick"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </pv:PancakeView>
                        <pv:PancakeView Grid.Row="0" Grid.Column="1" Padding="10" BackgroundColor="#791AE5"
                            BorderThickness="1" CornerRadius="15" Elevation="3">
                            <StackLayout>
                                <ImageButton Source="bgImage1" VerticalOptions="CenterAndExpand" Clicked="ActividadClick" BackgroundColor="Transparent"/>
                                <Label FontAttributes="Bold" FontSize="20" HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center" Text="Actividades" TextColor="White"
                                    VerticalOptions="CenterAndExpand">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ActividadClick"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </pv:PancakeView>
                        <pv:PancakeView Grid.Row="1" Grid.Column="0" Padding="8" BackgroundColor="#791AE5"
                            BorderThickness="1" CornerRadius="15" Elevation="3">
                            <StackLayout>
                                <ImageButton Source="bgImage1" VerticalOptions="CenterAndExpand" Clicked="ComercioClick" BackgroundColor="Transparent"/>
                                <Label FontAttributes="Bold" FontSize="20" HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center" Text="Comercios" TextColor="White"
                                    VerticalOptions="CenterAndExpand">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ComercioClick"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </pv:PancakeView>
                        <pv:PancakeView Grid.Row="1" Grid.Column="1" Padding="8" BackgroundColor="#791AE5" 
                            BorderThickness="1" CornerRadius="15" Elevation="3">
                            <StackLayout>
                                <ImageButton Source="bgImage1" VerticalOptions="CenterAndExpand" Clicked="AlojamientoClick" BackgroundColor="Transparent"/>
                                <Label FontAttributes="Bold" FontSize="20" HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center" Text="Alojamientos" TextColor="White"
                                    VerticalOptions="CenterAndExpand">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="AlojamientoClick"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </pv:PancakeView>
                        <pv:PancakeView Grid.Row="2" Grid.Column="0" Padding="10" BackgroundColor="#791AE5"
                            BorderThickness="1" CornerRadius="15" Elevation="3">
                            <StackLayout>
                                <ImageButton Source="bgImage1" VerticalOptions="CenterAndExpand" Clicked="FotoClick" BackgroundColor="Transparent"/>
                                <Label FontAttributes="Bold" FontSize="20" HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center" Text="Fotos" TextColor="White"
                                    VerticalOptions="CenterAndExpand">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="FotoClick"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </pv:PancakeView>
                        <pv:PancakeView Grid.Row="2" Grid.Column="1" Padding="10" BackgroundColor="#791AE5"
                            BorderThickness="1" CornerRadius="15" Elevation="3">
                            <StackLayout>
                                <ImageButton Source="bgImage1" VerticalOptions="CenterAndExpand" Clicked="VideoClick" BackgroundColor="Transparent"/>
                                <Label FontAttributes="Bold" FontSize="20" HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center" Text="Vídeos" TextColor="White"
                                    VerticalOptions="CenterAndExpand">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="VideoClick"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </pv:PancakeView>
                    </Grid>
                </StackLayout>
            </pv:PancakeView>
        </StackLayout>
    </ScrollView>
</ContentPage>
